    "version": "0.2.0",
    "configurations": [        
        {
            "type": "node",
            "request": "attach",
            "name": "RETRADIO - REMOTE",
            "address": "localhost",
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/opt/retradio/app"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "RETRADIO - LOCAL",
            "program": "${workspaceFolder}/src/retradio.js",
            "outputCapture": "std",
            "env": {
                "DEBUG": "*"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
        }
    ]
}